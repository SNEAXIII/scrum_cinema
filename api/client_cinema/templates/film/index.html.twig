{% extends 'base.html.twig' %}

{% block title %}Hello PostsController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <h1>Voici la liste des films à l'affiche</h1>
    {% for film in films %}
        <div>
            <h2>Titre : {{ film.titre }}</h2>
            <div>Durée : {{ film.duree }}</div>
            <div>Id : {{ film.id }}</div>
        </div>
        <br>
    {% endfor %}
{% endblock %}

